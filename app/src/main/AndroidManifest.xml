<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.ust.cse.comp4521.group20.opentoiletandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ToiletDetailActivity"
            android:label="@string/title_activity_toilet_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PathAdvisorActivity"
            android:parentActivityName=".ToiletDetailActivity" />
        <activity
            android:name=".WriteToiletReviewActivity"
            android:label="@string/title_activity_write_toilet_review"
            android:parentActivityName=".ToiletDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendSOSActivity"
            android:label="@string/title_activity_send_sos"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>